{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "bin",
        "sourceMap": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "bin", "tests", "docs", "scripts"]
}
